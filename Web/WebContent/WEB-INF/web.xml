<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>ssms</display-name>
  <listener>
  	<listener-class>com.lizhou.listener.SystemInitListener</listener-class>
  </listener>
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>404</error-code>
    <location>/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/500.jsp</location>
  </error-page>
  
  <filter>
    <description>字符编码过滤器</description>
    <filter-name>EncodeFilter</filter-name>
    <filter-class>com.lizhou.filter.EncodeFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodeFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <description>访问控制</description>
    <filter-name>VisitFilter</filter-name>
    <filter-class>com.lizhou.filter.VisitFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>VisitFilter</filter-name>
    <url-pattern>/ClazzServlet</url-pattern>
    <url-pattern>/CourseServlet</url-pattern>
    <url-pattern>/ExamServlet</url-pattern>
    <url-pattern>/GradeServlet</url-pattern>
    <url-pattern>/ScoreServlet</url-pattern>
    <url-pattern>/StudentServlet</url-pattern>
    <url-pattern>/SystemServlet</url-pattern>
    <url-pattern>/TeacherServlet</url-pattern>
  </filter-mapping>

<!--  注册 -->
  <servlet>
    <description>登录</description>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.lizhou.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
